<Window x:Class="LapKeys.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LapKeys"
        xmlns:vm="clr-namespace:LapKeys.ViewModels"
        mc:Ignorable="d"
        Title="{Binding Title}" 
        Height="500" 
        Width="700"
        MinHeight="400"
        MinWidth="600"
        WindowStartupLocation="CenterScreen"
        StateChanged="Window_StateChanged">
    
    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="LapKeys - Laptop Control" 
                   FontSize="24" 
                   FontWeight="Bold"
                   Margin="0,0,0,20"/>
        
        <!-- Main Content Area -->
        <Border Grid.Row="1" 
                BorderBrush="#CCCCCC" 
                BorderThickness="1" 
                CornerRadius="5"
                Padding="15">
            <StackPanel>
                <TextBlock Text="Welcome to LapKeys!" 
                           FontSize="16" 
                           Margin="0,0,0,10"/>
                <TextBlock Text="This application will help you control your laptop settings."
                           TextWrapping="Wrap"
                           Foreground="#666666"/>
                
                <!-- Placeholder for future controls -->
                <TextBlock Text="Settings controls will appear here..."
                           Margin="0,20,0,0"
                           FontStyle="Italic"
                           Foreground="#999999"/>
            </StackPanel>
        </Border>
        
        <!-- Footer -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,10,0,0">
            <Button Content="Minimize to Tray" 
                    Padding="10,5" 
                    Click="MinimizeToTray_Click"
                    Margin="0,0,10,0"/>
            <Button Content="Close" 
                    Padding="10,5" 
                    Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>
