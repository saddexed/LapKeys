<Window x:Class="LapKeys.Views.RefreshRateOverlay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Refresh Rate"
        Width="200"
        Height="80"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        WindowStartupLocation="Manual"
        ResizeMode="NoResize">
    
    <Border Background="#E0202020"
            CornerRadius="12"
            Padding="20,16"
            Margin="8">
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="16" Opacity="0.4" ShadowDepth="2"/>
        </Border.Effect>
        
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Refresh Rate Display -->
            <StackPanel Grid.Column="1" 
                        Orientation="Horizontal" 
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center">
                <TextBlock x:Name="RateText"
                           Text="144"
                           FontSize="28"
                           FontWeight="Light"
                           Foreground="White"
                           VerticalAlignment="Bottom"/>
                <TextBlock Text="Hz"
                           FontSize="14"
                           Foreground="#AAAAAA"
                           VerticalAlignment="Bottom"
                           Margin="4,0,0,4"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
